  "license": "MIT",
  "homepage": "https://github.com/smahs/appemd#readme",
  "bugs": {
    "url": "https://github.com/smahs/appemd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smahs/appemd.git"
  },
  "author": "smahs <shemzzz@gmail.com>",
  "files": [
